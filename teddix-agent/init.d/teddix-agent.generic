#!/bin/sh

set -e

# /etc/init.d/teddix-agent: start and stop teddix agent daemon

test -x /usr/bin/teddix-agent || exit 0

DAEMON=teddix-agent
PIDFILE="/var/run/$DAEMON.pid"

PYTHON_BIN=`which python`
[ -x $PYTHON_BIN ] || echo "Unable to find python!" || exit 1

TEDDIX=`which $DAEMON`
[ -x $TEDDIX ] || echo "Unable to find $DAEMON!" || exit 1
TEDDIX_OPTS=""  

teddix_getpid()
{
	#PID=`ps -fe | grep TeddixAgent | grep -v grep | awk '{print $2}'`
	[ ! -f $PIDFILE ] && echo -n ""
	[ -f $PIDFILE ] && cat $PIDFILE

}

teddix_start()
{
	CNT=5
	echo  -n "Starting $DAEMON: "
	while [ $CNT -ne 0 ]; do 
		if [ ! -f $PIDFILE ]; then
			$TEDDIX $TEDDIX_OPTS
			CNT=`expr $CNT - 1`
			sleep 1
		else
			if [ $CNT -eq 5 ]; then 
				PID=$(teddix_getpid)
				echo "$DAEMON is already running ($PID)"
				return 1
			else
				PID=$(teddix_getpid)
				if [ "$PID" != "" ];then
					echo "[ OK ]"
					return 0
				else
					CNT=`expr $CNT - 1`
					sleep 1
				fi
			fi
		fi
	done

	return 1
}

teddix_stop()
{	
	CNT=5
	echo -n "Stopping $DAEMON: "
	while [ $CNT -ne 0 ]; do 
		if [ -f $PIDFILE ]; then
			PID=$(teddix_getpid)
			if [ "$PID" != "" ];then
				CNT=`expr $CNT - 1`
				kill $PID
				sleep 1
			fi
		else
			if [ $CNT -eq 5 ]; then 
				echo "$DAEMON is not running."
				return 1
			else
				echo "[ OK ]"
				return 0
			fi
		fi
	done

	# If not - shoot him dead...
	if [ -f $PIDFILE ]; then
		PID=$(teddix_getpid)
		if [ "$PID" != "" ];then
			kill -9 $PID
			echo "[ OK ]"
			return 0
		fi
	fi

	return 1
}


case $1 in
	'start')
		teddix_start
		;;

	'stop')
		teddix_stop
		;;

	'restart')
		teddix_stop
		sleep 2
		teddix_start
		;;

	'status')
		if [ -f $PIDFILE ]; then
			PID=$(teddix_getpid)
			if [ "$PID" != "" ];then
				echo "The $DAEMON is running"
			fi
		else
			echo "$DAEMON is not running"
		fi
		;;

	*)
		echo -e "\nusage: ./`basename $0` {start|stop|restart|status}\n"
		;;

esac
